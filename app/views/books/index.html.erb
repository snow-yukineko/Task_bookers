<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th class="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", "/books/#{book.id}/edit" %></td>
        <td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>



<h2>New book</h2>


<% if @book.errors.any? %>
<div class="error">
    <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
    <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
    </ul>
</div>
<% end %>


<div class="new">
  <%= form_with model: @book do |f| %>
    <div  class="search">
      <div><%= f.label :title %></div>
      <div><%= f.text_field :title %></div>
    </div>

    <div class="search">
      <div><%= f.label :body %></div>
      <div><%= f.text_area :body %></div>
    </div>

    <div>
      <div class="new_i"><%= f.submit 'Create Book' %></div>
    </div>

  <% end %>
</div>