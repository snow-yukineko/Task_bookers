<h1>Editing Book</h1>
<div>

<% if @book.errors.any? %>
<div class="error">
    <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
    <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
    </ul>
</div>
<% end %>


  <%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>
    <div  class="search">
      <label><%= f.label :title %><label>
      <div><%= f.text_field :title %></div>
    </div>

    <div class="search">
      <label><%= f.label :body %></label>
      <div><%= f.text_area :body %></div>
    </div>

    <div>
      <div class="new_i"><%= f.submit 'Update Book' %></div>
    </div>
  <% end %>
</div>

<div class="link">
  <%= link_to "Show", book_path(@book.id) %>
  |
  <%= link_to "Back", "/books" %>
</div>